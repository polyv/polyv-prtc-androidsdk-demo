<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="@dimen/height_size_100"
                android:layout_height="wrap_content"
                android:background="@drawable/alert_dialog_bg">

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center"
            android:layout_margin="@dimen/height_size_36">

        <TextView
                android:layout_gravity="center"
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="fadsfasdf"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/height_size_36"
                />
        <TextView
                android:layout_gravity="center"
                android:id="@+id/msg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text=""
            android:visibility="gone"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_24"
                />
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_size_1"
            android:background="@color/color_FFDDDDDD"/>
    <LinearLayout android:layout_width="@dimen/height_size_100"
                  android:layout_height="@dimen/height_size_72"
                  android:orientation="horizontal"
                  android:gravity="center"
                  >
        <Button
                android:layout_gravity="center"
                android:id="@+id/cannel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/cannel"
            android:focusable="true"
            android:focusableInTouchMode="true"
                android:textColor="@color/cannel_text_color"
                android:textSize="@dimen/text_size_34"
                android:background="@drawable/button_cannel_bg"
                android:layout_weight="1"
                />
        <LinearLayout
                android:layout_width="@dimen/height_size_1"
                android:layout_height="fill_parent"
                android:background="@color/color_FFDDDDDD"/>

            <Button
                    android:layout_gravity="center"
                    android:id="@+id/ok"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/yes"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/cannel_text_color"
                    android:textSize="@dimen/text_size_34"
                    android:background="@drawable/button_ok_dialog_bg"
                    android:layout_weight="1"
                    />

    </LinearLayout>
</LinearLayout>
